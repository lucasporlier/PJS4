            <intent-filter>
                <action android:name = "android.intent.action.MAIN"/>

                <category android:name = "android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name = ".activity.NewGameActivity"></activity>

        <activity android:name = ".activity.NewGameActivity2"></activity>

        <activity android:name = ".activity.PlayerFileCreationActivity"></activity>

        <activity android:name = ".activity.InGameMenuActivity"></activity>

