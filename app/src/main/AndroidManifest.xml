<?xml version="1.0" encoding="utf-8"?>
<manifest
    package = "com.pjs4.roleplaie.roleplaie"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    >

    <application
        android:allowBackup = "true"
        android:icon = "@mipmap/ic_launcher"
        android:label = "@string/app_name"
        android:supportsRtl = "true"
        android:theme = "@style/AppTheme"
        >

        <activity
            android:name = ".activity.MainActivity"
            android:label = "@string/app_name"
            android:theme = "@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name = "android.intent.action.MAIN"/>
                <category android:name = "android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <!-- more activity here-->

        <activity
            android:name = ".activity.NewGameActivity"
            android:label = "label"
            >
        </activity>

        <activity
            android:name = ".activity.InGameMenuActivity"
            >
        </activity>

        <activity
            android:name = ".activity.DiceActivity"
            >
        </activity>

        <activity
            android:name = ".activity.PlayerFileActivity"
            >
        </activity>

        <activity
            android:name = ".activity.PlayerFileCreationActivity"
            android:configChanges = "keyboardHidden|orientation"
            >
        </activity>

        <activity
            android:name = ".activity.MiniMapActivity"
            android:screenOrientation = "landscape"
            >
        </activity>

        <activity
            android:name = ".activity.LoadGameActivity"
            >
        </activity>

        <activity
            android:name = ".activity.PlayerListActivity"
            >
        </activity>

    </application>

</manifest>
