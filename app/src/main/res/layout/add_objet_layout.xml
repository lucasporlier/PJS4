<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:orientation = "vertical"
              android:weightSum = "1"
    android:background="@drawable/backgroung1">

    <TextView
        android:id = "@+id/add_objet_title"
        style = "@style/title"
        android:layout_width = "match_parent"
        android:text = "@string/add_object"/>

    <TextView
        android:id = "@+id/new_object_name"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/name"/>

    <EditText
        android:id = "@+id/EditText_Object_Name"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"/>

    <TextView
        android:id = "@+id/TextViewObjectEffect"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/object_effect"/>

    <EditText
        android:id = "@+id/EditText_Object_Effect"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"/>

    <TextView
        android:id = "@+id/new_object_quantity"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/quantity"/>

    <EditText
        android:id = "@+id/EditText_Object_Quantity"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"/>

    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center"
        android:layout_marginTop = "50sp"
        android:orientation = "horizontal">


        <Button
            android:id = "@+id/button2"
            style = "@style/button_app"
            android:layout_width = "@dimen/button_size"
            android:layout_marginRight = "40sp"
            android:onClick = "addAndNew"
            android:text = "@string/new_object"
            />

        <Button
            android:id = "@+id/button3"
            style = "@style/button_app"
            android:layout_width = "@dimen/button_size"
            android:layout_gravity = "right"
            android:onClick = "addAndQuit"
            android:text = "@string/add"
            />

    </LinearLayout>

</LinearLayout>