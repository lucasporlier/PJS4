<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:text="CrÃ©ation d'objet"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" />

    <TextView
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="Nom de l'objet"
        android:id="@+id/textView2"
        android:layout_weight="0.06"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/objetNameED"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Effet de l'objet"
        android:id="@+id/textView3"
        android:layout_weight="0.06"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/effetObjetED"
        android:layout_weight="0.06" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/textView4"
        android:layout_weight="0.06"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nbObjetED"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nouvel Objet"
            android:id="@+id/newObjet"
            android:layout_weight="0.06"
            android:onClick="newObjetCreation"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmer"
            android:id="@+id/confirmer"
            android:layout_gravity="right"
            android:layout_weight="0.06"
            android:onClick="confirmerCreation"
            />


    </LinearLayout>


</LinearLayout>