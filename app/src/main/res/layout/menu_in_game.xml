<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
    android:background="@drawable/backgroung1">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:layout_gravity="center">


        <TextView
            android:id = "@+id/game_name"
            android:layout_width = "wrap_content"
            style="@style/title"
            android:text = "GameName"

            />

        <ImageView
            android:layout_width = "@dimen/minimap_size"
            android:layout_height = "@dimen/minimap_size"
            android:layout_margin = "10sp"
            android:background="@color/colorDefault"
            android:onClick = "miniMap"
            android:layout_gravity="center"
            />

    </LinearLayout >

    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center"
        android:orientation = "horizontal"
        >

        <Button
            android:layout_width = "@dimen/button_size"
            style="@style/button_app"
            android:layout_margin = "10sp"
            android:onClick = "seeCharactereProfile"
            android:text = "@string/caractere_profile"
            />

        <Button
            android:layout_width = "@dimen/button_size"
            style="@style/button_app"
            android:layout_margin = "10sp"
            android:onClick="chooseDice"
            android:text = "@string/launch_dice"
            />
    </LinearLayout >



    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center"
        android:orientation = "horizontal"
        >

        <Button
            android:layout_width = "@dimen/button_size"
            style="@style/button_app"
            android:layout_margin = "10sp"
            android:text = "summary"
            android:onClick="writeSummary"
            />

        <Button
            android:layout_width = "@dimen/button_size"
            style="@style/button_app"
            android:layout_margin = "10sp"
            android:text = "Exit"
            android:onClick="exitGameMenu"
            />
    </LinearLayout >

</LinearLayout>