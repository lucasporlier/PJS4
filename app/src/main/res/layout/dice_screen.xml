<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:orientation = "vertical"
    android:background="@drawable/backgroung1">

    <TextView
        style = "@style/title"
        android:layout_width = "wrap_content"
        android:text = "@string/dice_title"


        />

    <ImageView
        android:contentDescription="@string/dice_image_desc_notrad"
        android:id = "@+id/imageDice3d"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentTop = "true"
        android:onClick = "HandleClick"
        android:src = "@drawable/dice3droll6"
        />


    <TextView
        android:id = "@+id/chosen_dice"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center"
        android:text = "@string/you_chose_the_dice"
        android:textSize = "25sp"
        />

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "horizontal">


        <ListView
            android:id = "@+id/dice_list"
            android:layout_width = "200sp"
            android:layout_height = "match_parent">
        </ListView>


        <Button
            style = "@style/button_app"
            android:layout_width = "wrap_content"
            android:layout_height = "50sp
            "
            android:layout_margin = "10sp"
            android:onClick = "launchDice"
            android:text = "@string/launch"/>

    </LinearLayout>

</LinearLayout>