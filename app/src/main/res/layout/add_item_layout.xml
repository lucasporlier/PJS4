<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:orientation = "vertical"
    android:background="@drawable/backgroung1">

    <TextView
        android:layout_width = "wrap_content"
        android:text = "Add Item"
        style="@style/title"/>

    <TextView
        android:id = "@+id/nomProObjUtil"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "NomPro"/>

    <TextView
        android:id = "@+id/nomObjUtil"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "nomObj"/>

    <TextView
        android:id = "@+id/quantityObjUtil"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/quantity"/>

    <TextView
        android:id = "@+id/effetObjUtil"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/object_effect"/>

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/quantity_to_use"/>

    <EditText
        android:id = "@+id/nombreUse"
        android:layout_width = "150sp"
        android:layout_height = "wrap_content"
        android:hint = "Quantity"
        android:inputType = "number"
        />

    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center"
        android:orientation = "horizontal">

        <Button
            style = "@style/button_app"
            android:layout_width = "150sp"
            android:layout_marginRight = "20sp"
            android:onClick = "cancel"
            android:text = "@string/cancel"/>

        <Button
            android:layout_width = "150sp"
            style="@style/button_app"
            android:onClick = "add"
            android:text = "@string/add"/>
    </LinearLayout>

</LinearLayout>