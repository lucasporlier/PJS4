<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:app = "http://schemas.android.com/apk/res-auto"
              xmlns:tools = "http://schemas.android.com/tools"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:background = "@drawable/backgroung1"
              android:orientation = "vertical"
              app:layout_behavior = "@string/appbar_scrolling_view_behavior"
              tools:context = ".activity.NewGameActivity2">

    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical">

            <TextView
                style = "@style/title"
                android:layout_width = "match_parent"
                android:padding = "10dp"
                android:text = "@string/new_game"/>

            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "10dp"
                android:text = "@string/write_player_carac"
                android:textSize = "20sp"
                />

            <ListView
                android:id = "@+id/listStatView"
                android:layout_width = "wrap_content"
                android:layout_height = "250dp"
                />

            <Button
                android:id = "@+id/confirm_new_game"
                style = "@style/button_app"
                android:layout_width = "match_parent"
                android:layout_margin = "@dimen/button_margin"

                android:onClick = "confirmNewGame2"
                android:text = "@string/confirm"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>